#!/bin/sh

WALL="$XDG_DATA_HOME"/wall

restore() {
	[ -f "$WALL" ] && hsetroot -fill $WALL && exit
	echo "No wallpaper set" >/dev/stderr
	exit 1
}

wallset() {
	cp $IMAGE $WALL
	restore
}

if [ -z "$1" ]; then
	restore
else
	IMAGE="$1"
	if file "$IMAGE" |grep -qE 'image';then
		wallset
	else
		echo "$IMAGE is not valid image file" >/dev/stderr
		exit 1
	fi
fi
